<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link rel="stylesheet" href="/css/admin.css">
    <style>
        /* Add these styles to your existing stylesheet or create a new one */

        .action a {
            display: inline-block;
            margin-right: 10px;
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            background-color: #3498db;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .action a:hover {
            background-color: #2980b9;
        }

        .card {
            background-color: #e74c3c;
        }

        .lego {
            background-color: #2ecc71;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            font-size: 16px; /* Adjust the font size as needed */
        }

        img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <a href="/home" class="action__item"><h2>Return home</h2></a>

    <h2>Admin page</h2>
    <div class="action">
        <a href="/card/add" class="card">Add Card</a>
        <a href="/lego/add" class="lego">Add Lego</a>
    </div>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Type</th>
                <th>Origin</th>
                <th>Price</th>
                <th>Description</th>
                <th>Type Toy</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{# each cards }}
            <tr>
                <td>{{name}}</td>
                <td><img src="{{image}}" alt=""></td>
                <td>{{type}}</td>
                <td>{{origin}}</td>
                <td>{{price}}</td>
                <td>{{description}}</td>
                <td>Card</td>
                <td>
                    <div class="action">
                        <a href="/card/edit/{{_id}}" class="action__item">Update</a><a href="/card/delete/{{_id}}" class="action__item" onclick="return confirm('Are you sure to delete ?');">Delete</a>
                    </div>
                </td>
            </tr>
            {{/each}}
            {{# each legos }}
            <tr>
                <td>{{name}}</td>
                <td><img src="{{image}}" alt=""></td>
                <td>{{type}}</td>
                <td>{{origin}}</td>
                <td>{{price}}</td>
                <td>{{description}}</td>
                <td>Lego</td>
                <td>
                    <div class="action">
                        <a href="/lego/edit/{{_id}}" class="action__item">Update</a><a href="/lego/delete/{{_id}}" class="action__item" onclick="return confirm('Are you sure to delete ?');">Delete</a>
                    </div>
                </td>
            </tr>
            {{/each}}
            <!-- Add more rows as needed -->
        </tbody>
    </table>
</body>
</html>
